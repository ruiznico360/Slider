<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:background="#fff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/search_result_title"
        android:textColor="#2428f9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://someurl.com/"
        android:singleLine="true"
        android:layout_below="@id/search_result_title"
        android:id="@+id/search_result_url"
        android:textColor="#046b19"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/search_result_divider"
        android:layout_below="@id/search_result_url"
        android:background="#979797"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="some sick text some sick text some sick text some sick text some sick text some sick text some sick text some sick text some sick text some sick text "
        android:id="@+id/search_result_content"
        android:layout_below="@id/search_result_url" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:gravity="left"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_below="@id/search_result_content"
        android:id="@+id/search_result_title_quick_answer"
        android:textColor="#2428f9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://someurl.com/"
        android:visibility="gone"
        android:singleLine="true"
        android:layout_below="@id/search_result_title_quick_answer"
        android:id="@+id/search_result_url_quick_answer"
        android:textColor="#046b19"
        />
</RelativeLayout>