<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.slider.app.slider">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".util.SliderApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.Slider"
            android:autoRemoveFromRecents="true"
            android:showOnLockScreen="true"
            android:excludeFromRecents="true"
            android:finishOnCloseSystemDialogs="true"
            android:noHistory="true"
            android:taskAffinity=".ui.UserInterface"
            android:theme="@style/AppTheme.UIStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.SystemOverlay" android:process=":my_process"/>
        <service android:name=".services.RestarterJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="true"/>
        <receiver android:name=".services.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <service android:name=".services.Restarter"/>
        <activity
            android:name=".ui.PermissionsInterface"
            android:taskAffinity=".ui.PermissionsInterface"
            android:theme="@style/AppTheme.SettingsStyle" />
        <activity
            android:name=".ui.SettingsActivity"
            android:autoRemoveFromRecents="true"
            android:excludeFromRecents="true"
            android:finishOnCloseSystemDialogs="true"
            android:noHistory="true"
            android:taskAffinity=".ui.SettingsActivity"
            android:theme="@style/AppTheme.SettingsStyle" />
    </application>

</manifest>